<div class="content">
  <h1>Admin page<h1>

  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><%= value %></div>
  <% end %>

  <h2><%= @user.email %></h2>
  <div>
    Change Password

    <%= form_with url: admin_account_change_password_path(@user.id) do |f| %>
      <%= f.password_field :password %><br>

      <%= f.submit "Change Password", class: "pure-button" %>
    <% end %>
  </div>
</div>
