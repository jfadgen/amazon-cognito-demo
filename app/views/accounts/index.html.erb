<div class="content sign-in">
  <h1>Sign In</h1>

  <div class="content-section">

    <% if @message.present? %>
      <%= @message %>
    <% end %>

  <%= form_with url: accounts_path, class: "pure-form" do |f| %>
    <%= f.text_field :email, placeholder: "Email" %><br>
    <%= f.password_field :password, placeholder: "Password" %><br>

    <%= f.submit "Sign In", class: "pure-button pure-button-primary" %>
  <% end %>
  </div>
</div>
